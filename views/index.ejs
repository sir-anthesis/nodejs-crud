<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NODE JS CRUD</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

</head>

<style>
    body {
        background-color: #eee;
    }
</style>

<body>

    <div class="container">
        <h1>
            <%= title %>
        </h1>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Class</th>
                    <th scope="col">Phone</th>
                </tr>
            </thead>
            <tbody>
                <% for (let data of datas) { %>
                    <tr>
                        <th scope="row">
                            <%= data.id %>
                        </th>
                        <td>
                            <%= data.name %>
                        </td>
                        <td>
                            <%= data.class %>
                        </td>
                        <td>
                            <%= data.phone %>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>

        <form action="/" method="post">
            <h3>CRUD FORM</h3>
            <div class="row mb-3">
                <label for="name" class="col-sm-2 col-form-label">ID</label>
                <div class="col-sm-10">
                    <input type="number" name="id" class="form-control" placeholder="Only for update & select">
                </div>
            </div>

            <div class="row mb-3">
                <label for="name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" name="name" class="form-control">
                </div>
            </div>

            <div class="row mb-3">
                <label for="class" class="col-sm-2 col-form-label">Class</label>
                <div class="col-sm-10">
                    <input type="text" name="class" class="form-control">
                </div>
            </div>

            <div class="row mb-3">
                <label for="phone" class="col-sm-2 col-form-label">Phone</label>
                <div class="col-sm-10">
                    <input type="number" name="phone" class="form-control">
                </div>
            </div>

            <input type="submit" class="btn btn-danger" value="insert" name="action">
            <input type="submit" class="btn btn-danger" value="delete" name="action">
            <input type="submit" class="btn btn-danger" value="update" name="action">
            <input type="submit" class="btn btn-danger" value="select" name="action">
            <input type="submit" class="btn btn-danger" value="refresh" name="action">

        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>

</body>

</html>